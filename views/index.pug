extends layout

block content
  .container
      .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
          if error
            p Error getting dynamic content.
          else
            if !posts || posts.length == 0
              p There is no available posts
            else
              each post in posts
               .post-preview
                  a(href='post.html')
                    h2.post-title
                      = post.title
                    h3.post-subtitle
                      = post.content
                  p.post-meta
                    = 'Posted on ' + post.created_date
          // Pager
          ul.pager
            li.next
              a(href='#') Older Posts â†’  
